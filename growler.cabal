                       import Data.Monoid ((&#60;&#62;))
                       .
                       main = growl id defaultConfig $ do
                       &#32;&#32;get &#34;/&#34; $ text &#34;Hello, World!&#34;
                       &#32;&#32;get &#34;/:name&#34; $ do
                       &#32;&#32;&#32;&#32;name <- param &#34;name&#34;
                       &#32;&#32;&#32;&#32;text (&#34;Hello, &#34; &#60;&#62; name &#60;&#62; &#34;!&#34;)
                     @

